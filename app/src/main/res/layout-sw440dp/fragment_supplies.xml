<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1150dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0099cc"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#FEFEFE"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <ImageView
                        android:id="@+id/img_bage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        rv:srcCompat="@drawable/ic_message_black_24dp" />

                    <com.nex3z.notificationbadge.NotificationBadge
                        android:id="@+id/badge"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignTop="@id/icon"
                        android:layout_marginLeft="-16dp"
                        android:layout_marginTop="-4dp"
                        android:layout_toRightOf="@id/icon"
                        android:layout_gravity="right"
                        app:nbBackground="@drawable/badge_bg_with_shadow"
                        app:nbMaxTextLength="2" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ln_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="280dp"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/list_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="50dp"
                        android:background="@android:color/transparent"
                        android:divider="#b5b5b5"
                        android:dividerHeight="1dp"
                        android:listSelector="@drawable/list_selector" />

                </LinearLayout>

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_click_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#0099cc"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_data1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_data3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_data4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_result3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_data5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
