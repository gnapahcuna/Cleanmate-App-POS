<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@android:color/transparent"
    android:listSelector="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip">


    <!-- Title Of Song-->

    <!-- Artist Name -->

    <!-- Rightend Duration -->

    <!-- Rightend Arrow -->


    <ImageView
        android:id="@+id/img_chk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textBarcode"
        app:srcCompat="@drawable/icon_check" />

    <TextView
        android:id="@+id/index"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="1"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/index"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMETH"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMEEN"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/aa"
        android:layout_weight="1"
        android:text="(0/2)"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?android:attr/windowBackgroundFallback"
        android:textSize="16sp" />

</RelativeLayout>

